

<h1>Sign up</h1>


<form action="/insert_user">
  <label for="browser_email">Email</label>
  <input id="browser_email" type="text" name="query_email" placeholder="Enter an email...">
  <label for="browser_password">Password</label>
  <input id="browser_password" type="password" name="query_password_digest" placeholder="Enter a password...">
  <label for="browser_password_confirmation">Password Confirmation</label>
  <input id="browser_password_confirmation" type="password" name="input_password_confirmation" placeholder="Enter a password...">
  <label for="browser_username">Username</label>
  <input id="browser_username" type="text" name="query_username" placeholder="Enter an email...">

  <label for="browser_comments">Comments count</label>
  <input id="browser_comments" type="integer" name="query_comments_count" type="hidden">
  <label for="browser_likes">Likes count</label>
  <input id="browser_likes" type="integer" name="query_likes_count"type="hidden">



  <button>Add user</button>
</form>